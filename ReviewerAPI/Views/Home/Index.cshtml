@model IndexViewModel

@{

}

<div class="main-img">
    <span class="title">Beauty Recenziraj</span>
    <form asp-controller="Home" asp-action="Index" method="get">
        <input class="search" type="text" name="search" placeholder="Pretraži" value="@Model.Search" />
        <button class="submit-btn">Pretraži</button>
    </form>
</div>


<div>

    @foreach (var post in Model.Posts)
    {
        var image_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@image_path" />
            <span class="title">
                @post.Title
            </span>
        </a>
    }

    <div class="page-link">
        @if (Model.PageNumber > 1)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-search="@Model.Search" asp-route-pageNumber="@(Model.PageNumber -1)">Prethodna stranica</a>
        }

        @if (Model.NextPage)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-search="@Model.Search" asp-route-pageNumber="@(Model.PageNumber +1)">Sljedeća stranica</a>
        }

    </div>



</div>
