@model ReviewViewModel

@{

}

<div class="review-section">
    <form method="post" asp-controller="Home" asp-action="Review">
        <div class="form-group">
            <label>Napiši recenziju</label>
            <input asp-for="Message" rows="3"/>
            
        </div>
      

        <div class="form-outline">
            <label>Ocjeni proizvod</label>
            <input asp-for="Rating" />
        </div>

        <input asp-for="PostId" type="hidden" />
        <input asp-for="ReviewId" type="hidden" />



        <button type="submit">Objavi</button>
    </form>
</div>
